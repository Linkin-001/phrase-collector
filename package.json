{
  "name": "phrase-collector",
  "version": "1.0.0",
  "description": "一款基于 Electron 的短语应用，旨在帮助用户在阅读文档时高效收集、管理和复习重要短语",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build:dev && electron .",
    "build:dev": "vite build --config vite.main.config.js && vite build --config vite.preload.config.js && vite build --config vite.config.js",
    "build": "npm run build:dev && electron-builder",
    "build:win": "npm run build:dev && electron-builder --win",
    "build:mac": "npm run build:dev && electron-builder --mac",
    "build:linux": "npm run build:dev && electron-builder --linux",
    "build:all": "npm run build:dev && electron-builder --win --mac --linux"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-dmg": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/plugin-fuses": "^7.8.2",
    "@electron-forge/plugin-vite": "^7.8.2",
    "@electron/fuses": "^2.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@xitanggg/node-selection": "^1.3.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.1",
    "vue": "^3.5.18"
  },
  "build": {
    "appId": "com.drawspace.phrase.collector",
    "productName": "Phrase Collector",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/database.js",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "Phrase Collector",
      "icon": "build/icon.icns"
    }
  }
}
